
@{
                ViewBag.Title = "viewarea";
                Layout = "~/Views/Shared/MyLayout.cshtml";
}

@model List<veggiesapp.Models.cityareajoin>

<div class="row">
    <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
        <div class="page-header">
            <h2 class="pageheader-title">Location Management</h2>
            <p class="pageheader-text">Proin placerat ante duiullam scelerisque a velit ac porta, fusce sit amet vestibulum mi. Morbi lobortis pulvinar quam.</p>
            <div class="page-breadcrumb">
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a href="#" class="breadcrumb-link">Dashboard</a></li>
                        <li class="breadcrumb-item"><a href="#" class="breadcrumb-link">Location Management</a></li>
                        <li class="breadcrumb-item active" aria-current="page">Areas</li>
                    </ol>
                </nav>
            </div>
        </div>
    </div>
</div>
<!-- ============================================================== -->
<!-- end pageheader -->
<!-- ============================================================== -->
<div class="row">
    <!-- ============================================================== -->
    <!-- basic table  -->
    <!-- ============================================================== -->
    <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
        <div class="card">
            <h5 class="card-header">Area Details</h5>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-striped table-bordered first">
                        <thead>
                            <tr>
                                <th style="text-align:center">City</th>
                                <th style="text-align:center">Area</th>
                                <th style="text-align:center">Shipping Charge</th>
                                <th style="text-align:center">Minimum Amount</th>
                                <th style="text-align:center">Visible</th>
                                <th style="text-align:center">Edit</th>
                                <th style="text-align:center">Delete</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var ar in Model)
                            {
                                <tr>
                                    <td style="text-align:center">@ar.objcity.Name</td>
                                    <td style="text-align:center">@ar.objarea.Name</td>
                                    <td style="text-align:center">@ar.objarea.shippingcharge</td>
                                    <td style="text-align:center">@ar.objarea.minimumcharge</td>
                                    
                                    @if(@ar.objarea.visible == true)
                                    {
                                        <td style="color:green; text-align:center">Yes</td>
                                    }
                                    else
                                    {
                                        <td style="color:red; text-align:center">No</td>
                                    }
                                    @*<td>@ar.objarea.visible</td>*@
                                    <td style="text-align:center"><a href=@Url.Action("editarea","Location",new {id=ar.objarea.id })><input type="Button" value="Edit" style="background-color: lightskyblue;color: white;width: 74px;height: 30px;"></a></td>
                                    <td style="text-align:center"><a href=@Url.Action("deletearea","Location",new {id=ar.objarea.id })><input type="Button" value="Delete" onclick="return confirm('are you sure you want to Delete this Area?');" style="background-color: red;color: white;width: 74px;height: 30px;"></a></td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
    <!-- ============================================================== -->
    <!-- end basic table  -->
    <!-- ============================================================== -->
</div>

