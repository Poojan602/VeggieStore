@{
    ViewBag.Title = "viewnotification";
    Layout = "~/Views/Shared/MyLayout.cshtml";
}

@model List<veggiesapp.Models.Notificationdealerjoin>

<div class="row">
    <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
        <div class="page-header">
            <h2 class="pageheader-title">Notification Management</h2>
            <p class="pageheader-text">Proin placerat ante duiullam scelerisque a velit ac porta, fusce sit amet vestibulum mi. Morbi lobortis pulvinar quam.</p>
            <div class="page-breadcrumb">
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a href="#" class="breadcrumb-link">Dashboard</a></li>
                        <li class="breadcrumb-item"><a href="#" class="breadcrumb-link">Notification Management</a></li>
                        <li class="breadcrumb-item active" aria-current="page">View Notification</li>
                    </ol>
                </nav>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <!-- ============================================================== -->
    <!-- basic table  -->
    <!-- ============================================================== -->
    <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
        <div class="card">
            <h5 class="card-header" style="background-color:#71748d;color:white">Notification</h5>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-striped table-bordered first">
                        <thead>
                            <tr>
                                <th>Dealer</th>
                                <th>Notification</th>
                                <th>Date</th>
                                <th>Details</th>
                                <th>Delete</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var noti in Model)
                            {
                                <tr>
                                    <td style="text-align:center">@noti.objdlr.Name</td>
                                    <td><img src="@(noti.objnoti.image)" width="200px" height="87px"> @noti.objnoti.Message</td>
                                    <td style="text-align:center">@noti.objnoti.addeddate</td>
                                    <td style="text-align:center"><a href=@Url.Action("notificationdetail","Notification",new {id= noti.objnoti.id})><input type="button" value="View" style="background-color: #5bc0de;color: white;width: 74px;height: 30px;"></a></td>
                                    <td style="text-align:center"><a href=@Url.Action("deletenotification","Notification",new {id= noti.objnoti.id})><input type="Button" value="Delete" onclick="return confirm('are you sure you want to Delete this Notification?');" style="background-color: red;color: white;width: 74px;height: 30px;"></a></td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>


