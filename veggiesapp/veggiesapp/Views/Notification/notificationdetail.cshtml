
@{
    ViewBag.Title = "notificationdetail";
    Layout = "~/Views/Shared/MyLayout.cshtml";
}

<style>
    .product-colors input[type=checkbox], input[type=radio] {
        display: inline-block !important;
    }
</style>

@model veggiesapp.Models.notification

<div class="row">
    <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
        <div class="page-header">
            <h2 class="pageheader-title">Notification Management</h2>
            <p class="pageheader-text">Proin placerat ante duiullam scelerisque a velit ac porta, fusce sit amet vestibulum mi. Morbi lobortis pulvinar quam.</p>
            <div class="page-breadcrumb">
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a href="#" class="breadcrumb-link">Dashboard</a></li>
                        <li class="breadcrumb-item"><a href="#" class="breadcrumb-link">Notification Management</a></li>
                        <li class="breadcrumb-item active" aria-current="page">Add Notification</li>
                    </ol>
                </nav>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
        <div class="card">
            <h5 class="card-header" style="background-color:#71748d;color:white">Add Notification</h5>
            <div class="card-body">
                
                    <div class="row">
                        <div class="col-lg-12">

                            <div class="form-group">
                                <label style="text-decoration:solid; color:black">Image</label>
                                <br />
                                <img src="@Html.DisplayFor(m => m.image)" width="800px" height="348px">
                            </div>

                            <div class="form-group">
                                <label style="text-decoration:solid; color:black">Notification Message</label>
                                <br />
                                <br />
                                @Html.DisplayFor(m => m.Message, new { @class = "form-control" })
                            </div>

                            <div class="form-group">
                                <hr />
                                <a href=@Url.Action("viewnotification","Notification")><input type="Button" value="Back" class="btn btn-primary"></a>
                            </div>
                        </div>
                    </div>
                
            </div>
        </div>
    </div>
</div>
