
@{

                ViewBag.Title = "viewholidays";
                Layout = "~/Views/Shared/MyLayout.cshtml";
}

@model List<veggiesapp.Models.holidaydealerjoin>

<div class="row">
    <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
        <div class="page-header">
            <h2 class="pageheader-title">Holidays Management</h2>
            <p class="pageheader-text">Proin placerat ante duiullam scelerisque a velit ac porta, fusce sit amet vestibulum mi. Morbi lobortis pulvinar quam.</p>
            <div class="page-breadcrumb">
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a class="breadcrumb-link">Dashboard</a></li>
                        <li class="breadcrumb-item"><a class="breadcrumb-link">Holidays Management</a></li>
                        <li class="breadcrumb-item active" aria-current="page">View Holidays</li>
                    </ol>
                </nav>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <!-- ============================================================== -->
    <!-- basic table  -->
    <!-- ============================================================== -->
    <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
        <div class="card">
            <h5 class="card-header">View Holidays</h5>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-striped table-bordered first">
                        <thead>
                            <tr>
                                <th>Dealer</th>
                                <th>Holiday Name</th>
                                <th>Date</th>
                                <th>Edit</th>
                                <th>Delete</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var hld in Model)
                            {
                            <tr>
                                <td>@hld.objdlr.Name</td>
                                <td>@hld.objhld.title</td>
                                <td>@hld.objhld.holidaydate</td>
                                <td><a href=@Url.Action("editholidays","Holidays",new {id=hld.objhld.id })><input type="Button" value="Edit" style="background-color: lightskyblue;color: white;width: 74px;height: 30px;"></a></td>
                                <td><a href=@Url.Action("deleteholiday","Holidays",new {id=hld.objhld.id })><input type="Button" value="Delete" onclick="return confirm('are you sure you want to Delete this Holiday?');" style="background-color: red;color: white;width: 74px;height: 30px;"></a></td>
                            </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
    <!-- ============================================================== -->
    <!-- end basic table  -->
    <!-- ============================================================== -->
</div>

