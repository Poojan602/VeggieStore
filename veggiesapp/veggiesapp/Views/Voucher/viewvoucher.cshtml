
@{
                ViewBag.Title = "viewvoucher";
                Layout = "~/Views/Shared/MyLayout.cshtml";
}

@model List<veggiesapp.Models.voucherareajoin>

<div class="row">
    <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
        <div class="page-header">
            <h2 class="pageheader-title">Voucher Management</h2>
            <p class="pageheader-text">Proin placerat ante duiullam scelerisque a velit ac porta, fusce sit amet vestibulum mi. Morbi lobortis pulvinar quam.</p>
            <div class="page-breadcrumb">
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a class="breadcrumb-link">Dashboard</a></li>
                        <li class="breadcrumb-item"><a class="breadcrumb-link">Voucher Management</a></li>
                        <li class="breadcrumb-item active" aria-current="page">View Voucher</li>
                    </ol>
                </nav>
            </div>
        </div>
    </div>
</div>
<!-- ============================================================== -->
<!-- end pageheader -->
<!-- ============================================================== -->
<div class="row">
    <!-- ============================================================== -->
    <!-- basic table  -->
    <!-- ============================================================== -->
    <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
        <div class="card">
            <h5 class="card-header" style="background-color:#71748d;color:white">View Vouchers</h5>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-striped table-bordered first">
                        <thead>
                            <tr>
                                <th>Area</th>
                                <th>Code</th>
                                <th>Type</th>
                                <th>Value</th>
                                <th>Details</th>
                                @*<th>Send</th>*@
                                <th>Edit</th>
                                <th>Delete</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var vch in Model)
                            {
                            <tr>
                                <td>@vch.objar.Name</td>
                                <td>@vch.objvc.Code</td>
                                @if (@vch.objvc.Type == 1)
                                {
                                    <td>Value Based</td>
                                }
                                else
                                {
                                    <td>Percent Based</td>
                                }
                                <td>@vch.objvc.VoucherAmount</td>
                                <td><a href=@Url.Action("voucherdetails","Voucher",new {id=vch.objvc.id })><input type="Button" value="Details" style="color:black;background-color:transparent;height:30px;width:85px;" /></a></td>
                                @*<td><a href=@Url.Action("sendvoucher","Voucher",new {id=vch.objvc.id })><input type="Button" value="Send" style="background-color: lawngreen;color: white;width: 74px;height: 30px;"></a></td>*@
                                <td><a href=@Url.Action("editvoucher","Voucher",new {id=vch.objvc.id })><input type="Button" value="Edit" style="background-color: lightskyblue;color: white;width: 74px;height: 30px;"></a></td>
                                <td><a href=@Url.Action("deletevoucher","Voucher",new {id=vch.objvc.id })><input type="Button" value="Delete" onclick="return confirm('are you sure you want to Delete this Voucher?');" style="background-color: red;color: white;width: 74px;height: 30px;"></a></td>
                            </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
    <!-- ============================================================== -->
    <!-- end basic table  -->
    <!-- ============================================================== -->
</div>

