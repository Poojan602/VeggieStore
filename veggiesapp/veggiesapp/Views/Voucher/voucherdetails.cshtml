
@{
    ViewBag.Title = "viewvoucher";
    Layout = "~/Views/Shared/MyLayout.cshtml";
}

@model veggiesapp.Models.voucher

<div class="row">
    <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
        <div class="page-header">
            <h2 class="pageheader-title">Voucher Management</h2>
            <p class="pageheader-text">Proin placerat ante duiullam scelerisque a velit ac porta, fusce sit amet vestibulum mi. Morbi lobortis pulvinar quam.</p>
            <div class="page-breadcrumb">
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a class="breadcrumb-link">Dashboard</a></li>
                        <li class="breadcrumb-item"><a class="breadcrumb-link">Voucher Management</a></li>
                        <li class="breadcrumb-item"><a class="breadcrumb-link">View Voucher</a></li>
                        <li class="breadcrumb-item active" aria-current="page">Voucher Detail</li>
                    </ol>
                </nav>
            </div>
        </div>
    </div>
</div>



<div class="row">
    <!-- ============================================================== -->
    <!-- basic table  -->
    <!-- ============================================================== -->
    <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
        <div class="card">
            <h5 class="card-header" style="background-color:#71748d;color:white">Voucher Details</h5>
            <div class="card-body">
                <div class="row">
                    <div class="col-lg-12">
                        <div class="panel panel-default">
                            <div class="panel-body">
                                <div class="row">
                                    <div class="col-lg-12">
                                        <div class="row form-group">
                                            <div class="col-lg-4"><strong>Voucher Code :</strong></div>
                                            <div class="col-lg-8">
                                                @Html.DisplayFor(model => model.Code)
                                            </div>
                                        </div>
                                        <div class="row form-group">
                                            <div class="col-lg-4"><strong>Voucher Type :</strong></div>
                                            <div class="col-lg-8">
                                                @if (Model.Type == 1)
                                                {
                                                    @Html.Label("Value Based")
                                                }
                                                else
                                                {
                                                    @Html.Label("Percent Based")
                                                }
                                            </div>
                                        </div>
                                        <div class="row form-group">
                                            <div class="col-lg-4"><strong>Discount Amount :</strong></div>
                                            <div class="col-lg-8">
                                                @if (Model.Type == 1)
                                                {
                                                    @Html.DisplayFor(model => model.VoucherAmount)
                                                    @:&nbsp;
                                                    @Html.Label("Rs")
                                                }
                                                else
                                                {
                                                    @Html.DisplayFor(model => model.VoucherAmount)
                                                    @:&nbsp;
                                                    @Html.Label("%")
                                                }
                                            </div>
                                        </div>
                                        <div class="row form-group">
                                            <div class="col-lg-4"><strong>Minimum Shopping Amount :</strong></div>
                                            <div class="col-lg-8">
                                                @Html.DisplayFor(model => model.MinimumAmount)
                                                &nbsp;
                                                @Html.Label("Rs")
                                            </div>
                                        </div>

                                        <div class="row form-group">
                                            <div class="col-lg-4"><strong>Issue Date :</strong></div>
                                            <div class="col-lg-8">
                                                @Html.DisplayFor(model => model.PublishDate)
                                            </div>
                                        </div>
                                        <div class="row form-group">
                                            <div class="col-lg-4"><strong>Expiry Date :</strong></div>
                                            <div class="col-lg-8">
                                                @Html.DisplayFor(model => model.ExpiryDate)
                                            </div>
                                        </div>
                                        <div class=" row form-group">
                                            <div class="col-lg-4"><strong>To Whom :</strong></div>
                                            <div class="col-lg-8">
                                                @if (Model.Towhom == 1)
                                                {
                                                    @Html.Label("All Customers")
                                                }
                                                else
                                                {
                                                    @Html.Label("Registered Customers")
                                                }
                                            </div>
                                        </div>
                                        <div class="row form-group">
                                            <div class="col-lg-4"><strong>Admin Note :</strong></div>
                                            <div class="col-lg-8">
                                                @Html.DisplayFor(model => model.AdminNote)
                                            </div>
                                        </div>
                                        <hr />
                                    </div>
                                </div>
                                <!-- /.row (nested) -->
                            </div>
                            <!-- /.panel-body -->
                        </div>
                        <!-- /.panel -->
                    </div>
                    <!-- /.col-lg-12 -->
                </div>
            </div>
        </div>
    </div>
    <!-- ============================================================== -->
    <!-- end basic table  -->
    <!-- ============================================================== -->
</div>

