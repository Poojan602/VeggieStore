
@{
    TempData["DealerID"] = TempData["DLRID"];
    ViewBag.Title = "Addareas";
    Layout = "~/Views/Shared/MyLayout.cshtml";
}

@*@model IEnumerable<veggiesapp.Models.AreaModel>*@
@model List<veggiesapp.Models.AreaModel>
@*@model List<SelectListItem>*@


<div class="row">
    <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
        <div class="page-header">
            <h2 class="pageheader-title">Dealers Management</h2>
            <p class="pageheader-text">Proin placerat ante duiullam scelerisque a velit ac porta, fusce sit amet vestibulum mi. Morbi lobortis pulvinar quam.</p>
            <div class="page-breadcrumb">
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a class="breadcrumb-link">Dashboard</a></li>
                        <li class="breadcrumb-item"><a class="breadcrumb-link">Dealers Management</a></li>
                        <li class="breadcrumb-item"><a class="breadcrumb-link">Dealer's Detail</a></li>
                        <li class="breadcrumb-item active" aria-current="page">Add area</li>
                    </ol>
                </nav>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
        <div class="card">
            <h5 class="card-header">Add Voucher</h5>
            <div class="card-body">
                @using (Html.BeginForm("UpdateArea", "Dealer", FormMethod.Post))
                {
                    <div class="row">
                        <div class="col-lg-12">
                            <div class="form-group">
                                <label>City : </label> &nbsp;&nbsp;
                                @TempData["Cityname"]
                            </div>

                            <div class="form-group">
                                <Label>Areas</Label>
                                <br />

                                @for (int i = 0; i < Model.Count; i++)
                                {
                                    @Html.HiddenFor(m => m[i].area.id)
                                    @Html.HiddenFor(m => m[i].area.cityid)
                                    @Html.HiddenFor(m => m[i].area.minimumcharge)
                                    @Html.HiddenFor(m => m[i].area.shippingcharge)
                                    @Html.HiddenFor(m => m[i].area.visible)
                                    @Html.HiddenFor(m => m[i].areaselected.id)
                                    @Html.HiddenFor(m => m[i].areaselected.dealerid)
                                    @Html.HiddenFor(m => m[i].areaselected.areaid)

                                    @Html.CheckBoxFor(m => m[i].areaselected.ischecked)
                                    <label>&nbsp;&nbsp;</label>@Html.DisplayFor(m => m[i].area.Name)
                                    <br />
                                }
                            </div>
                            <hr />
                            <button id="btnAdd" class="btn btn-primary">Submit</button>
                            @*<input type="submit" value="Submit" class="btn btn-primary" />*@
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>