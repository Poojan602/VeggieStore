
@{
    ViewBag.Title = "activedealer";
    Layout = "~/Views/Shared/MyLayout.cshtml";
}

@model IEnumerable<veggiesapp.Models.DealerCityJoin>

<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
<script>
    $(document).ready(function () {

        $(".activeclass").hover(function () {
            $(this).css("background-color", "green");
            $(this).css("color", "white")
        },
            function () {
                $(this).css("background-color", "transparent");
                $(this).css("color", "green")
            });
    });
</script>


<div class="row">
    <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
        <div class="page-header">
            <h2 class="pageheader-title">Dealers Management</h2>
            <p class="pageheader-text">Proin placerat ante duiullam scelerisque a velit ac porta, fusce sit amet vestibulum mi. Morbi lobortis pulvinar quam.</p>
            <div class="page-breadcrumb">
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a href="#" class="breadcrumb-link">Dashboard</a></li>
                        <li class="breadcrumb-item"><a href="#" class="breadcrumb-link">Dealers Management</a></li>
                        <li class="breadcrumb-item active" aria-current="page">Active Dealers</li>
                    </ol>
                </nav>
            </div>
        </div>
    </div>
</div>
<!-- ============================================================== -->
<!-- end pageheader -->
<!-- ============================================================== -->
<div class="row">
    <!-- ============================================================== -->
    <!-- basic table  -->
    <!-- ============================================================== -->
    <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
        <div class="card">
            <h5 class="card-header" style="background-color:#71748d;color:white">Active Dealers</h5>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-striped table-bordered first">
                        <thead>
                            <tr>
                                <th>Name</th>
                                <th>City</th>
                                <th>Email</th>
                                <th>Phone</th>
                                <th>Status</th>
                                <th>Details</th>
                                <th>Login</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.objdlr.Name</td>
                                    <td>@item.objcity.Name</td>
                                    <td>@item.objdlr.Email</td>
                                    <td>@item.objdlr.Phone</td>
                                    <td><a href=@Url.Action("activetosuspend","Dealer",new {id=item.objdlr.id})><input type="button" id="button" onclick="return confirm('are you sure you want to suspend this Dealer?');" class="activeclass" value="Active" style="color:green;background-color:transparent;height:30px;width:85px;border-color: green;" /></a></td>
                                    <td><a href=@Url.Action("viewdealerdetails","Dealer",new {id=item.objdlr.id})><input type="button" value="View" style="background-color: #5bc0de;color: white;width: 74px;height: 30px;"></a></td>
                                    <td><a href=@Url.Action("login","DealerLogin", new {id=item.objdlr.id}) , target="_blank"><input type="button" value="Login" style="background-color: gold;color: white;width: 74px;height: 30px;"></a></td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
    <!-- ============================================================== -->
    <!-- end basic table  -->
    <!-- ============================================================== -->
</div>
