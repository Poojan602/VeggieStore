                                                    </div>
                                                    <hr />
                                                    <div class="row form-group">
                                                        <div class="col-lg-4"><strong>Delivery Slot Description: </strong></div>
                                                        <div class="col-lg-6">
                                                            @Html.DisplayFor(m => m.objdlr.SlotDescription)
