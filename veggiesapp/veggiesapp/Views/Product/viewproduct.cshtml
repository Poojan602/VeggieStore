
@{
    ViewBag.Title = "viewproduct";
    Layout = "~/Views/Shared/MyLayout.cshtml";
}


@model List<veggiesapp.Models.product>

<div class="row">
    <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
        <div class="page-header">
            <h2 class="pageheader-title">Product Management</h2>
            <p class="pageheader-text">Proin placerat ante duiullam scelerisque a velit ac porta, fusce sit amet vestibulum mi. Morbi lobortis pulvinar quam.</p>
            <div class="page-breadcrumb">
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a href="#" class="breadcrumb-link">Dashboard</a></li>
                        <li class="breadcrumb-item"><a href="#" class="breadcrumb-link">Product Management</a></li>
                        <li class="breadcrumb-item active" aria-current="page">View Products</li>
                    </ol>
                </nav>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <!-- ============================================================== -->
    <!-- basic table  -->
    <!-- ============================================================== -->
    <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
        <div class="card">
            <h5 class="card-header" style="background-color:#71748d;color:white">Products</h5>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-striped table-bordered first">
                        <thead>
                            <tr>
                                <th>Title</th>
                                <th>Image</th>
                                <th>Visible</th>
                                <th>Featured</th>
                                <th>Edit</th>
                                <th>Delete</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var pr in Model)
                            {
                                <tr>
                                    <td>@pr.Title</td>
                                    <td><img src="@(pr.Image)" width="120px" height="120px"></td>

                                    @if (@pr.visible == true)
                                    {
                                        <td style="text-align:center">Yes</td>
                                    }
                                    else
                                    {
                                        <td style="text-align:center">No</td>
                                    }

                                    @if (@pr.featured == true)
                                    {
                                        <td style="text-align:center">Yes</td>
                                    }
                                    else
                                    {
                                        <td style="text-align:center">No</td>
                                    }

                                    <td style="text-align:center"><a href=@Url.Action("editproduct","Product",new {id=pr.id})><input type="button" value="Edit" style="background-color: #5bc0de;color: white;width: 74px;height: 30px;"></a></td>
                                    <td style="text-align:center"><a href=@Url.Action("deleteproduct","Product",new {id=pr.id})><input type="Button" value="Delete" onclick="return confirm('are you sure you want to Delete this Product?');" style="background-color: red;color: white;width: 74px;height: 30px;"></a></td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
    <!-- ============================================================== -->
    <!-- end basic table  -->
    <!-- ============================================================== -->
</div>

