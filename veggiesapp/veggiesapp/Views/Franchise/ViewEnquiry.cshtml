
@{
    ViewBag.Title = "ViewEnquiry";
    Layout = "~/Views/Shared/MyLayout.cshtml";
}

@model List<veggiesapp.Models.enquiry>

<div class="row">
    <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
        <div class="page-header">
            <h2 class="pageheader-title">Franchise Management</h2>
            <p class="pageheader-text">Proin placerat ante duiullam scelerisque a velit ac porta, fusce sit amet vestibulum mi. Morbi lobortis pulvinar quam.</p>
            <div class="page-breadcrumb">
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a href="#" class="breadcrumb-link">Dashboard</a></li>
                        <li class="breadcrumb-item active" aria-current="page">Franchise Management</li>
                    </ol>
                </nav>
            </div>
        </div>
    </div>
</div>
<!-- ============================================================== -->
<!-- end pageheader -->
<!-- ============================================================== -->
<div class="row">
    <!-- ============================================================== -->
    <!-- basic table  -->
    <!-- ============================================================== -->
    <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
        <div class="card">
            <h5 class="card-header" style="background-color:#71748d;color:white">Franchise Enquiry</h5>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-striped table-bordered first">
                        <thead>
                            <tr>
                                <th>Name</th>
                                <th>Email</th>
                                <th>Details</th>
                                <th>Delete</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var en in Model)
                            {
                            <tr>
                                <td>@en.fname @en.lname</td>
                                <td>@en.email</td>
                                <td><a href=@Url.Action("EnquiryDetails","Franchise",new { id=en.id })><input type="button" value="View" style="background-color: #5bc0de;color: white;width: 74px;height: 30px;"></a></td>
                                <td><a href=@Url.Action("DeleteEnquiry","Franchise",new { id=en.id })><input type="button" id="button" onclick="return confirm('are you sure you want to Delete this Enquiry?');" value="Delete" style="color:white;background-color:red;height:30px;width:74px;border-color: red;" /></a></td>
                            </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
    <!-- ============================================================== -->
    <!-- end basic table  -->
    <!-- ============================================================== -->
</div>
