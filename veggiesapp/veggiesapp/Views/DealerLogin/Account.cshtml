
@{
    ViewBag.Title = "Account";
    Layout = "~/Views/Shared/MyLayout  dealer.cshtml";
}

@model veggiesapp.Models.DealerAreamodelSubscriptionselectedDeliveryslotJoin

<div class="row">
    <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
        <div class="card">
            <h3 class="card-header" style="background-color:#71748d;color:white">Dealer Profile</h3>
            <br />
            <div style="text-align: center">
                @if (ViewBag.successchange != null)
                {
                    <h5 class="text-danger">@ViewBag.successchange</h5>
                }
                @if (ViewBag.wrongoldpass != null)
                {
                    <h5 class="text-danger">@ViewBag.wrongoldpass Try Again</h5>
                }
            </div>
            <div class="card-body">

                <div class="card">
                    <div class="col-lg-12">
                        <div class="">
                            <h5 class="card-header">
                                Your Registration Details
                            </h5>
                            <div class="card-body">
                                <div class="row">
                                    <div class="col-lg-6">
                                        <div class="row form-group">
                                            <div class="col-lg-4"><strong>Name :</strong></div>
                                            <div class="col-lg-8">
                                                @Html.DisplayFor(m => m.objdlr.Name)
                                            </div>
                                        </div>
                                        <div class="row form-group">
                                            <div class="col-lg-4"><strong>Address :</strong></div>
                                            <div class="col-lg-8">
                                                @Html.DisplayFor(m => m.objdlr.Address)
                                            </div>
                                        </div>
                                        <div class="row form-group">
                                            <div class="col-lg-4"><strong>City / Town :</strong></div>
                                            <div class="col-lg-8">
                                                @Html.DisplayFor(m => m.objct.Name)
                                            </div>
                                        </div>
                                        @*<div class="row form-group">
                                            <div class="col-lg-4"><strong>State :</strong></div>
                                            <div class="col-lg-8">
                                                @Html.DisplayFor(m => m.objdlr.State)
                                            </div>
                                        </div>*@
                                        <div class="row form-group">
                                            <div class="col-lg-4"><strong>Zip Code :</strong></div>
                                            <div class="col-lg-8">
                                                @Html.DisplayFor(m => m.objdlr.PostCode)
                                            </div>
                                        </div>
                                        <div class="row form-group">
                                            <div class="col-lg-4"><strong>Landmark :</strong></div>
                                            <div class="col-lg-8">
                                                @Html.DisplayFor(m => m.objdlr.Landmark)
                                            </div>
                                        </div>
                                        <div class=" row form-group">
                                            <div class="col-lg-4"><strong>Email :</strong></div>
                                            <div class="col-lg-8">
                                                @Html.DisplayFor(m => m.objdlr.Email)
                                            </div>
                                        </div>
                                        <div class="row form-group">
                                            <div class="col-lg-4"><strong>Contact :</strong></div>
                                            <div class="col-lg-8">
                                                @Html.DisplayFor(m => m.objdlr.Phone)
                                            </div>
                                        </div>

                                    </div>
                                    <div class="col-lg-6">
                                        <div class="row form-group">
                                            <div class="col-lg-12"><strong>Areas of serving :</strong></div>
                                            <div class="col-lg-12">
                                                <br />
                                                <table class="table table-striped table-bordered table-hover">
                                                    <thead>
                                                        <tr>
                                                            <th class="header">Area</th>
                                                            <th class="header">City</th>
                                                        </tr>
                                                    </thead>
                                                    <tbody>
                                                        @foreach (var item in Model.areamodel)
                                                        {
                                                            <tr>
                                                                <td>@item.area.Name</td>
                                                                <td>@Model.objct.Name</td>
                                                            </tr>
                                                        }

                                                    </tbody>
                                                </table>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <br />
                <div class="card">
                    <div class="col-lg-12">
                        <div class="panel panel-default">
                            <h5 class="card-header">
                                Subscription History
                            </h5>
                            <div class="card-body">
                                <div class="row">
                                    <div class="col-lg-12">
                                        <div class="dataTable_wrapper">
                                            <div class="row form-group">
                                                <div class="col-lg-12">
                                                    <table class="table table-striped table-bordered table-hover">
                                                        <thead>
                                                            <tr>
                                                                <th class="header">Status</th>
                                                                <th class="header">Name</th>
                                                                <th class="header">Duration <small><small>(days)</small></small></th>
                                                                <th class="header">Amount</th>
                                                                <th class="header">Expiry Date</th>
                                                            </tr>
                                                        </thead>
                                                        <tbody>
                                                            <tr>
                                                                @if (Model.objsubselected.status == 1)
                                                                {
                                                                    <td>Active</td>
                                                                }
                                                                else
                                                                {
                                                                    <td>Expired</td>
                                                                }
                                                                <td>@Model.objsubselected.name</td>
                                                                <td>@Model.objsubselected.days</td>
                                                                <td>@Model.objsubselected.amount</td>
                                                                <td>@Model.objsubselected.enddate</td>
                                                            </tr>
                                                        </tbody>
                                                    </table>
                                                </div>
                                            </div>
                                            <strong>
                                            </strong>
                                        </div>
                                        <hr>
                                        <input type="button" class="btn btn-primary" value="Renew Subscription">
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <br />
                <div class="card">
                    <div class="col-lg-12">
                        <div class="panel panel-default">
                            <h5 class="card-header">
                                Change Password
                            </h5>
                            <div class="card-body">
                                <div class="row">
                                    <div class="col-lg-12">
                                        @using (Html.BeginForm("changepass", "DealerLogin", FormMethod.Post, new { enctype = "multipart/form-data", @onsubmit = "return validation()" }))
                                        {
                                            <div class="form-group">
                                                <label>Old Password</label>
                                                @Html.TextBoxFor(m => m.objdlr.OldPassword, new { @class = "form-control", @type = "password", @id = "oldpass" })
                                                <span id="oldpassmessage" class="text-danger"></span>
                                            </div>
                                            <div class="form-group">
                                                <label>New Password</label><small> [Minimum - 5 characters - Maximum 30 characters]</small>
                                                @Html.TextBoxFor(m => m.objdlr.NewPassword, new { @class = "form-control", @type = "password", @id = "newpass" })
                                                <span id="newpassmessage" class="text-danger"></span>
                                            </div>

                                            <hr>
                                            <input type="submit" value="Update Password" class="btn btn-primary" id="submit">
                                            <a href="@Url.Action("Account","DealerLogin")"><input type="button" value="Cancel" onclick="return confirm('are you sure you want to cancel this process')" class="btn btn-primary"></a>
                                        }
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    function validation() {
        var oldpass = document.getElementById("oldpass").value;
        var newpass = document.getElementById("newpass").value;

        if (oldpass != "") {
            if (newpass != "") {
                document.getElementById("oldpassmessage").innerHTML = "";
                document.getElementById("newpassmessage").innerHTML = "";
                return true;
            }
            else {
                document.getElementById("newpassmessage").innerHTML = "New Password field cannot be blank";
                document.getElementById("oldpassmessage").innerHTML = "";
                return false;
            }
        }
        else {
            document.getElementById("oldpassmessage").innerHTML = "Old Password field cannot be blank";
            if (newpass != "") {
                document.getElementById("newpassmessage").innerHTML = "";
            }
            else {
                document.getElementById("newpassmessage").innerHTML = "New Password field cannot be blank";
            }
            return false;
        }
    }
</script>