
@{

    ViewBag.Title = "viewreason";
    Layout = "~/Views/Shared/MyLayout.cshtml";
}

@model List<veggiesapp.Models.ticketdetail>

<div class="row">
    <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
        <div class="page-header">
            <h2 class="pageheader-title">Ticket Management</h2>
            <p class="pageheader-text">Proin placerat ante duiullam scelerisque a velit ac porta, fusce sit amet vestibulum mi. Morbi lobortis pulvinar quam.</p>
            <div class="page-breadcrumb">
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a href="#" class="breadcrumb-link">Dashboard</a></li>
                        <li class="breadcrumb-item"><a href="#" class="breadcrumb-link">Ticket Management</a></li>
                        <li class="breadcrumb-item active" aria-current="page">Add Reason</li>
                    </ol>
                </nav>
            </div>
        </div>
    </div>
</div>
<!-- ============================================================== -->
<!-- end pageheader -->
<!-- ============================================================== -->
<div class="row">
    <!-- ============================================================== -->
    <!-- basic table  -->
    <!-- ============================================================== -->
    <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
        <div class="card">
            <h5 class="card-header" style="background-color:#71748d;color:white">View Reasons</h5>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-striped table-bordered first">
                        <thead>
                            <tr style="text-align : center">
                                <th>Name</th>
                                <th>Edit</th>
                                <th>Delete</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var rsn in Model)
                            {
                                <tr style="text-align : center">
                                    <td>@rsn.Name</td>
                                    <td><a href=@Url.Action("editreason","Ticket",new {id=rsn.id })><input type="Button" value="Edit" style="background-color: lightskyblue;color: white;width: 74px;height: 30px;"></a></td>
                                    <td><a href=@Url.Action("deletereason","Ticket",new {id=rsn.id })><input type="Button" value="Delete" onclick="return confirm('are you sure you want to Delete this Reason?');" style="background-color: red;color: white;width: 74px;height: 30px;"></a></td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
    <!-- ============================================================== -->
    <!-- end basic table  -->
    <!-- ============================================================== -->
</div>

