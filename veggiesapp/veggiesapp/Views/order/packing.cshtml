
@{
    ViewBag.Title = "packing";
    Layout = "~/Views/Shared/MyLayout.cshtml";
    TempData["Status"] = ViewBag.Title;
}

@model IEnumerable<veggiesapp.Models.OrdermasterCustomerjoin>

<div class="row">
    <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
        <div class="page-header">
            <h2 class="pageheader-title">Order Management</h2>
            <p class="pageheader-text">Proin placerat ante duiullam scelerisque a velit ac porta, fusce sit amet vestibulum mi. Morbi lobortis pulvinar quam.</p>
            <div class="page-breadcrumb">
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a href="#" class="breadcrumb-link">Dashboard</a></li>
                        <li class="breadcrumb-item"><a href="#" class="breadcrumb-link">Order Management</a></li>
                        <li class="breadcrumb-item active" aria-current="page">Packing Done</li>
                    </ol>
                </nav>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <!-- ============================================================== -->
    <!-- basic table  -->
    <!-- ============================================================== -->
    <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
        <div class="card">
            <h5 class="card-header" style="background-color:#71748d;color:white">Packing Done</h5>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-striped table-bordered first">
                        <thead>
                            <tr>
                                <th>Order Number</th>
                                <th>Date</th>
                                <th>Amount</th>
                                <th>Customer Name</th>
                                <th>Order Status</th>
                                <th>View</th>
                                <th>Delete</th>
                                <th>Print</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var ordcust in Model)
                            {
                                <tr>
                                    <td>@ordcust.objordmaster.ordernumber</td>
                                    <td>@ordcust.objordmaster.Orderdate</td>
                                    <td>@ordcust.objordmaster.Grandtotal</td>
                                    <td>@ordcust.objcustomer.Name</td>
                                    <td style="color:orange">Packing Done</td>
                                    <td style="text-align:center"><a href=@Url.Action("orderdetail","Order",new {id=ordcust.objordmaster.id})><input type="button" value="View" style="background-color: skyblue;color: white;width: 74px;height: 30px;"></a></td>
                                    <td style="text-align:center"><a href=@Url.Action("deleteorder","Order",new {id=ordcust.objordmaster.id})><input type="Button" value="Delete" onclick="return confirm('are you sure you want to Delete this Order?');" style="background-color: red;color: white;width: 74px;height: 30px;"></a></td>
                                    <td style="text-align:center"><a href=@Url.Action("printorder","Order",new {id=ordcust.objordmaster.id})><input type="Button" value="Print" style="background-color: transparent;color: forestgreen; border-color:forestgreen;width: 74px;height: 30px;"></a></td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
    <!-- ============================================================== -->
    <!-- end basic table  -->
    <!-- ============================================================== -->
</div>>

